{
  "name": "nestjs-backend",
  "version": "0.0.1",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:dev:infra": "docker-compose up -d",
    "stop:dev:infra": "docker-compose down",
    "restart:dev:infra": "docker-compose down && docker-compose up -d",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --passWithNoTests",
    "migration:create": "npx mikro-orm migration:create",
    "migration:up": "npx mikro-orm migration:up",
    "migration:down": "npx mikro-orm migration:down",
    "docker:build": "cd ../.. && docker build -t nestjs-backend -f apps/nestjs-backend/dockerfile .",
    "docker:start:dev": "docker run -p 4000:4000 --env-file .env -e POSTGRES_HOST=host.docker.internal -e MAIL_HOST=host.docker.internal nestjs-backend"
  },
  "dependencies": {
    "@next-nest-turbo-auth-boilerplate/shared": "*",
    "@mikro-orm/core": "6.4.16",
    "@mikro-orm/migrations": "6.4.16",
    "@mikro-orm/nestjs": "6.1.1",
    "@mikro-orm/postgresql": "6.4.16",
    "@nestjs-modules/mailer": "2.0.2",
    "@nestjs/axios": "4.0.1",
    "@nestjs/common": "11.1.5",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.5",
    "@nestjs/jwt": "11.0.0",
    "@nestjs/mapped-types": "2.1.0",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.5",
    "@nestjs/schedule": "6.0.0",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/throttler": "6.4.0",
    "axios": "1.10.0",
    "bcrypt": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cookie-parser": "1.4.7",
    "dotenv": "17.2.0",
    "express": "5.1.0",
    "handlebars": "4.7.8",
    "helmet": "8.1.0",
    "joi": "18.0.1",
    "nodemailer": "7.0.5",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "6.4.16",
    "@nestjs/cli": "11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "11.1.5",
    "@types/bcrypt": "6.0.0",
    "@types/cookie-parser": "1.4.9",
    "@types/express": "5.0.3",
    "@types/hapi__joi": "17.1.15",
    "@types/jest": "30.0.0",
    "@types/node": "22.16.5",
    "@types/passport-jwt": "4.0.1",
    "jest": "30.0.4",
    "jest-mock-extended": "4.0.0",
    "source-map-support": "0.5.21",
    "ts-jest": "29.4.0",
    "ts-loader": "9.5.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.3",
    "eslint": "9.31.0",
    "xo": "1.2.1"
  },
  "packageManager": "npm@11.4.2"
}
